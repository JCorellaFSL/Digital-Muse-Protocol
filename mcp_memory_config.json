{
  "mcpServers": {
    "dm_protocol_memory": {
      "command": "npx",
      "args": [
        "-y", 
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "./book/memory/dm_protocol_memory.json"
      },
      "autoapprove": [
        "create_entities",
        "create_relations",
        "add_observations",
        "delete_entities",
        "delete_observations", 
        "delete_relations",
        "read_graph",
        "search_nodes",
        "open_nodes"
      ]
    }
  }
}