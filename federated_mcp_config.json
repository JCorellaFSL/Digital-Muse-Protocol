{
  "mcpServers": {
    "master_story": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MEMORY_FILE_PATH": "./book/memory/master_story_graph.json"
      },
      "autoapprove": [
        "create_entities",
        "create_relations",
        "add_observations",
        "search_nodes",
        "read_graph"
      ]
